<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.espressif.ui.activities.JoyStick">

    <Button
        android:id="@+id/backtoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="60sp"
        android:text="back to main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Giữ nguyên các TextView -->

        <TextView
            android:id="@+id/tv_joystick_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: 0 | Y: 0 | S:50"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_camera_permission" />
        <!-- Giữ nguyên JoystickView -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <!--            &lt;!&ndash; Thêm thuộc tính cho EditText &ndash;&gt;-->
            <EditText
                android:id="@+id/editTextText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true"
                android:text="192.168.1.100" />

            <EditText
                android:id="@+id/editPort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true"
                android:text="1234" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Save" />
            <!-- Giữ nguyên SeekBar và Button -->
            <SeekBar
                android:id="@+id/speed"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:max="100"
                android:min="0"
                android:progress="50" />

        </LinearLayout>

        <com.espressif.ui.activities.JoystickView
            android:id="@+id/joystick_right"
            android:layout_width="278dp"
            android:layout_height="200sp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>