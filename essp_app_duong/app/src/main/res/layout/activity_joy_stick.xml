<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.espressif.ui.activities.JoyStick"
    android:gravity="bottom"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_conect_ble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#009688"
            android:text="Connect BLE"
            android:textColor="#1A1919"
            android:textStyle="bold"
            app:iconTint="#3F51B5"
            app:rippleColor="#15C3B3"
            app:strokeColor="#F44336" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Giữ nguyên các TextView -->
        <TextView
            android:id="@+id/tv_joystick_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: 0 "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_joystick_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: 0 | S:50"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Giữ nguyên JoystickView -->
        <com.espressif.ui.activities.JoystickView
            android:id="@+id/joystick_left"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <!--            &lt;!&ndash; Thêm thuộc tính cho EditText &ndash;&gt;-->
            <!--            <EditText-->
            <!--                android:id="@+id/editTextText"-->
            <!--                android:layout_width="200dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:ems="10"-->
            <!--                android:inputType="text"-->
            <!--                android:text="192.168.1.100"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:imeOptions="actionDone"-->
            <!--                android:singleLine="true"-->
            <!--                android:focusableInTouchMode="true"-->
            <!--                />-->

            <!-- Giữ nguyên SeekBar và Button -->
            <SeekBar
                android:id="@+id/speed"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:max="100"
                android:min="0"
                android:progress="50" />

            <!--            <Button-->
            <!--                android:id="@+id/save"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:text="Save"-->
            <!--                android:layout_gravity="center" />-->
        </LinearLayout>

        <com.espressif.ui.activities.JoystickView
            android:id="@+id/joystick_right"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>